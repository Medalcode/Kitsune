# Configuración del Proyecto
PROJECT_NAME="Kitsune API"
API_V1_STR="/api/v1"

# Base de Datos
# Ejemplo SQLite: sqlite+aiosqlite:///./kitsune.db
# Ejemplo PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./kitsune.db

# Seguridad
# ¡IMPORTANTE! Cambiar esto en producción. Puedes generar uno con: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_TO_A_SECURE_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
